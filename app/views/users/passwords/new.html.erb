<div id="content-register-form">

  <div class="row">
    <div class="col-xs-12">
      <h2>¿Olvidaste tu constraseña?</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <p>Introduce la dirección de correo de tu cuenta y te enviaremos un enlace para recuperar tu contraseña</p>
        </div>
        <div class="form-group">
          <%= f.label :email, :class => 'sr-only'  %>
          <%= f.email_field :email, autofocus: true, :class => 'form-control big', :placeholder => 'Ingresa tu email' %>
        </div>

        <div class="actions">
          <%= f.submit "Enviar enlace", :class => 'btn btn-green fancybox' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>

</div>
