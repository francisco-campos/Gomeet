
  <div id="content-register-form">
    <div class="row">
      <div class="col-xs-12">
        <h1>Iniciar sesión</h1>
        <!-- Authentication resource -->
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <!-- Authentication resource -->

      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div id="register-buttons">
          <%= link_to user_facebook_omniauth_authorize_path, :class => "btn btn-social btn-facebook" do %>
              <span class="fa fa-facebook"></span> Ingresa con Facebook
          <% end %>
          <%= link_to user_google_oauth2_omniauth_authorize_path, :class => "btn btn-social btn-google" do %>
              <span class="fa fa-google"></span> Ingresa con Google
          <% end %>
        </div>
        <hr />
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= form_for(resource, :html => {:class => ''}, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, :class => 'sr-only' %>
            <%= f.email_field :email, autofocus: true, :class => 'form-control big', :placeholder => 'Email' %>
          </div>

          <div class="form-group">
            <%= f.label :password, :class => 'sr-only' %>
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control big', :placeholder => 'Clave' %>
          </div>
          <div class="form-group">
            <%= link_to "¿Olvidaste tu constraseña?", new_password_path(resource_name), class: 'lnk-green underline' %>
            <% if devise_mapping.rememberable? -%>
              <div class="checkbox form-login-check">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, value: 'Recordarme' %>
              </div>
            <% end -%>
          </div>

          <div class="actions">
            <%= f.submit "Ingresar", :class => 'btn btn-green' %>
          </div>
        <% end %>
      </div>
    </div>

    <%= render "users/shared/links" %>
</div>
