<div id="content-register-form">

  <div class="row">
    <div class="col-xs-12">
      <%= form_for(resource, :html => {:class => 'form-inline'}, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :name, :class => 'sr-only', :value => 'Nombre' %>
          <%= f.text_field :name, :class => 'form-control big', :placeholder => 'Ingresa tu nombre' %>
        </div>
        <div class="form-group">
          <%= f.label :email, :class => 'sr-only' %>
          <%= f.email_field :email, :class => 'form-control big', :placeholder => 'Ingresa tu email' %>
        </div>
        <div class="form-group">
          <%= f.label :password, :class => 'sr-only' %>
          <%= f.password_field :password, autocomplete: "off", :class => 'form-control big', :placeholder => 'ContraseÃ±a' %>
        </div>

        <div class="actions">
          <%= f.submit "Registrarme", :class => 'btn btn-green' %>
        </div>
      <% end %>



    </div>
  </div>

  <%= render "users/shared/links" %>
</div>
