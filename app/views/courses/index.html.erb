<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Short description</th>
      <th>About teacher</th>
      <th>What will we do</th>
      <th>What will i learn</th>
      <th>Requirements</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.location %></td>
        <td><%= course.short_description %></td>
        <td><%= course.about_teacher %></td>
        <td><%= course.what_will_we_do %></td>
        <td><%= course.what_will_i_learn %></td>
        <td><%= course.requirements %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

